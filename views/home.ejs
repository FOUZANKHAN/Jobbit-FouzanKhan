<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Job Search Manager</title>
  </head>
  <body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <h1>This is Jobbit</h1>
    <div id = "content">
   <form class="" action="/home" method="post">
     <label class = "contentLabel">Company Name: <br></label>
     <input type="text" name="companyName" value="" placeholder = "Company Name">
     <br>
     <label class = "contentLabel" >Role:<br></label>
     <input type="text" name="role" value="" placeholder = "Add the role here">
     <br>
     <label class = "contentLabel" >Job URL:<br></label>
     <input type="text" name="url" value="" placeholder = "job posting URL">
     <br>
     <label class = "contentLabel" >Remote: <br></label>
     <label for="remote">Yes</label>
     <input type="radio"name="remoteChecker" value="Yes">
     <label for="remote">No</label>
     <input type="radio" name="remoteChecker" value="No">
     <br>
     <label class = "contentLabel">Tech Stack:<br></label>
     <br>
     <textarea type="textarea" name="techStack" placeholder = "required Tech Stack" rows="10" cols="22"></textarea>
     <br>
     <button type="submit" name="button">Submit</button>

   </form>
    </div>

<br>
<h1>Applied Jobs</h1>
<br>

  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Role</th>
      <th scope="col">URL</th>
      <th scope="col">Tech Stack</th>
      <th scope="col">Remote Option</th>
      <th scope="col">Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% var count = 1%>
      <% appliedJobs.forEach(function(job){ %>
    <tr>
      <th scope="row"><%= count%></th>
      <td><%= job.companyName %></td>
      <td><%= job.role %></td>
      <td><%= job.url%></td>
      <td><%= job.techStack %></td>
      <td><%= job.remoteOption %></td>
      <td><%= job.createdAt %></td>
      <form class="" action="/deleteEntry" method="post">
      <td> <button type="submit" name="delButton">Delete</button></td>
      </form>
      <% count = count+1 %>
      <%})%>
    </tr>
  </tbody>
</table>
  </body>
</html>
