<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Job Search Manager</title>
  </head>
  <body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300;900&family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
    <div class = "backgroundOfForm">
    <div class = "formDivision">
   <form class="formIsolation" action="/home" method="post">
    <h1 class = "heading">Jobbit</h1>
     <input class = "formInput" type="text" name="companyName" value="" placeholder = "Company Name" required>
     <br>
     <input class = "formInput" type="text" name="role" value="" placeholder = "Add the role here" required>
     <br>
     <input class = "formInput" type="text" name="url" value="" placeholder = "Job posting URL" required>
     <br>
     <label class = "remoteCheckBox" >Remote: <br></label>
     <label class = "remoteCheckBox" for="remote">Yes</label>
     <input type="radio"name="remoteChecker" value="Yes">
     <label class = "remoteCheckBox" for="remote">No</label>
     <input type="radio" name="remoteChecker" value="No" >
     <br>
     <textarea
     type="textarea" name="TechStack" placeholder = "required Tech Stack" rows="8" cols="24"></textarea>
     <br>
     <button class = "formSubmitButton" type="submit" name="button">Submit</button>
   </form>
    </div>
      <img src="images/laptop.png" class = "laptopImage" alt="laptop image"></img>


<div class = "contentDivision">
<h1 class = "headingContent">Applied Jobs</h1>
<br>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Role</th>
      <th scope="col">URL</th>
      <th scope="col">Tech Stack</th>
      <th scope="col">Remote Option</th>
      <th scope="col">Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% var count = 1%>
      <% appliedJobs.forEach(function(job){ %>
    <tr>
      <form class="table" action="/deleteEntry" method="post">
      <th scope="row"><%= count%></th>
      <td><%= job.companyName %></td>
      <td><%= job.role %></td>
      <td><%= job.url%></td>
      <td><%= job.techStack %></td>
      <td><%= job.remoteOption %></td>
      <td><%= job.createdAt %></td>
      <td> <button class = "deleteButton" type="submit" name="delButton" value = '<%= job._id %>' >Remove</button></td>
      </form>
      <% count = count+1 %>
      </div>
      <%})%>
      <div>
      <h4>Total</h4>
      <div class = "Monitor">
          <h1 class = "numberOf"><%= count-1 %></h1>
        </div>
    </tr>
  </tbody>
</table>
</div>
</div>
  </body>
</html>
